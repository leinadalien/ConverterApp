<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <item
        app:top_left="true" android:state_enabled="true" android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <stroke android:width="10dp" android:color="@color/black"/>
            <corners android:radius="10dp" android:topLeftRadius="50dp"/>
        </shape>
    </item>
    <item
        app:top_left="true">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/black"/>
            <corners android:radius="10dp" android:topLeftRadius="50dp"/>
        </shape>
    </item>
    <item
        app:top_right="true">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/black"/>
            <corners android:radius="10dp" android:topRightRadius="50dp"/>
        </shape>
    </item>
    <item
        app:bottom_left="true">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/black"/>
            <corners android:radius="10dp" android:bottomLeftRadius="50dp"/>
        </shape>
    </item>
    <item
        app:bottom_right="true">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/black"/>
            <corners android:radius="10dp" android:bottomRightRadius="50dp"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/black"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>