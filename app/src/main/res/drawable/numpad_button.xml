<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <item
        app:position="top_left">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/black"/>
            <corners android:radius="10dp" android:topLeftRadius="50dp"/>
        </shape>
    </item>
    <item
        app:position="top_right">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/black"/>
            <corners android:radius="10dp" android:topRightRadius="50dp"/>
        </shape>
    </item>
    <item
        app:position="bottom_left">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/black"/>
            <corners android:radius="10dp" android:bottomLeftRadius="50dp"/>
        </shape>
    </item>
    <item
        app:position="bottom_right">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/black"/>
            <corners android:radius="10dp" android:bottomRightRadius="50dp"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/black"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>