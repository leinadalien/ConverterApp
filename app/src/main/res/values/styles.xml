<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Converter.NumButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">@color/num_button_foreground</item>
        <item name="backgroundTint">@color/num_button_background</item>
        <item name="layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
    <style name="Widget.Converter.FunButton" parent="Widget.Converter.NumButton">
        <item name="backgroundTint">@color/fun_button_background</item>
    </style>
    <style name="EditText">
        <item name="android:inputType">none</item>
    </style>
</resources>