<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Converter.NumButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:background">@drawable/numpad_button</item>
        <item name="android:textColor">@color/num_button_foreground</item>
        <item name="backgroundTint">@color/num_button_background</item>
        <item name="layout_gravity">fill</item>
        <item name="layout_columnWeight">1</item>
        <item name="layout_rowWeight">1</item>
        <item name="android:inset">0dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="Widget.Converter.FunButton" parent="Widget.Converter.NumButton">
        <item name="backgroundTint">@color/fun_button_background</item>
        <item name="android:padding">20dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="EditText">

    </style>
    <style name="Widget.Converter.Spinner" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textAlignment">center</item>
        <item name="android:padding">20dp</item>
        <item name="android:paddingEnd">20dp</item>
    </style>
    <style name="Widget.Converter.SwapButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:height">60dp</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:background">@drawable/swap_bg</item>
        <item name="android:textColor">@color/num_button_foreground</item>
        <item name="backgroundTint">@color/num_button_background</item>
        <item name="android:inset">0dp</item>
    </style>
</resources>